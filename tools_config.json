  {
    "name": "send_mixed_data",
    "description": "Send mixed data types to httpbin.org for testing (demonstrates array with mixed item types)",
    "parameters": {
      "type": "object",
      "properties": {
        "endpoint": {
          "type": "string",
          "description": "The endpoint to use (path variable)",
          "enum": ["post", "put", "patch"],
          "default": "post"
        },
        "data": {
          "type": "array",
          "description": "Array of mixed data items - can include strings, numbers, objects, booleans, etc.",
          "items": {
            "oneOf": [
              {"type": "string"},
              {"type": "number"},
              {"type": "boolean"},
              {"type": "object"},
              {"type": "array"}
            ]
          },
          "examples": [
            ["hello", 123, true, {"key": "value"}, [1, 2, 3]],
            ["user123", 45.67, false, {"name": "John", "age": 30}],
            [{"id": 1}, {"id": 2}, "separator", 999, ["tag1", "tag2"]]
          ]
        },
        "metadata": {
          "type": "object",
          "description": "Additional metadata to send with the request",
          "properties": {
            "timestamp": {
              "type": "string",
              "description": "ISO timestamp"
            },
            "source": {
              "type": "string",
              "description": "Source identifier"
            },
            "tags": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Tags for categorization"
            }
          },
          "examples": [
            {
              "timestamp": "2024-01-01T12:00:00Z",
              "source": "api-test",
              "tags": ["test", "mixed-data"]
            }
          ]
        },
        "test_mode": {
          "type": "boolean",
          "description": "Enable test mode for debugging",
          "default": true
        }
      },
      "required": ["data"]
    },
    "api": {
      "url": "https://httpbin.org/{endpoint}",
      "method": "POST",
      "auth": [
        {
          "type": "header",
          "key": "Content-Type",
          "value": "application/json"
        },
        {
          "type": "header",
          "key": "X-Test-Header",
          "value": "mixed-array-test"
        },
        {
          "type": "query_param",
          "key": "show_env",
          "value": "1"
        }
      ]
    }
  }
]