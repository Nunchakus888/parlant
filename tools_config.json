    "description": "Get current weather information for a specific location",
    "parameters": {
      "type": "object",
      "properties": {
        "q": {
          "type": "string",
          "description": "The city name, state/country code (e.g., 'London,UK' or 'New York,NY,US')",
          "examples": ["London,UK", "New York,NY,US", "Tokyo,JP", "Paris,FR"]
        },
        "units": {
          "type": "string",
