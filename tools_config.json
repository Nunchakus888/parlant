          "default": "CNY"
        },
        "amount": {
          "type": "number",
          "description": "The amount of money to convert",
          "examples": [100, 200, 300],
          "default": 100
        }
      },
      "required": []
    },
    "api": {
      "url": "https://v6.exchangerate-api.com/v6/9dd0f717def0b44c86ecdd95/pair/{base}/{target}/{amount}",
      "method": "GET",
      "auth": []
    }
