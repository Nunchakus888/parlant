[
  {
    "name": "get_weather",
    "description": "Get current weather information for a specific location",
    "parameters": {
      "type": "object",
      "properties": {
        "q": {
          "type": "string",
          "description": "The city name, state/country code (e.g., 'London,UK' or 'New York,NY,US')",
          "examples": ["London,UK", "New York,NY,US", "Tokyo,JP", "Paris,FR"]
        },
        "units": {
          "type": "string",
          "description": "The unit of the temperature (e.g., 'metric' for Celsius or 'imperial' for Fahrenheit)",
          "examples": ["metric", "imperial"],
          "default": "metric"
        },
        "lang": {
          "type": "string",
          "description": "The language of the weather information",
          "examples": ["en", "zh", "fr", "es", "de", "ja", "ko"],
          "default": "en"
        }
      },
      "required": ["q"]
    },
    "api": {
      "url": "https://api.openweathermap.org/data/2.5/weather",
      "method": "GET",
      "auth": [
        {
          "type": "query_param",
          "key": "appid",
          "value": "377637a8a6633d518b0eae6391887dbc"
        }
      ]
    }
  },
