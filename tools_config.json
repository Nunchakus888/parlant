    "name": "get_exchange_rate",
    "description": "Get real-time currency exchange rates (using exchangerate-api.com free tier)",
    "parameters": {
      "type": "object",
      "properties": {
        "base": {
          "type": "string",
          "description": "Base currency code (3-letter ISO code)",
          "examples": ["USD", "EUR", "GBP", "CNY", "JPY"],
          "default": "USD"
        },
        "target": {
          "type": "string",
